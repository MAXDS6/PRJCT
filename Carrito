        <h3>Tu carrito de compras</h3>
        <div class="cart">
            <ul id="cart-items">
                
            </ul>
            <p>Total: $<span id="total">0</span></p>
            <button id="clear-cart">Limpiar carrito de compras</button>
        </div>
