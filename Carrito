<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de compras</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Productos</h1>
        <div class="products">
            <div class="product">
                <h2>Tubo de escape</h2>
                <p>25.000$</p>
                <button class="add-to-cart" data-name="Tubo de escape" data-price="25000">Añadir al carrito</button>
            </div>
            <div class="product">
                <h2>Aceite de motor</h2>
                <p>10.000$</p>
                <button class="add-to-cart" data-name="Aceite de motor" data-price="10000">Añadir al carrito</button>
            </div>
            <div class="product">
                <h2>Neumático</h2>
                <p>50.000$</p>
                <button class="add-to-cart" data-name="Neumático" data-price="50000">Añadir al carrito</button>
            </div>
        </div>

        <h2>Tu carrito de compras</h2>
        <div class="cart">
            <ul id="cart-items">
                <!-- Items added to cart will appear here -->
            </ul>
            <p>Total: $<span id="total">0</span></p>
            <button id="clear-cart">Limpiar carrito de compras</button>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cartItems = document.getElementById("cart-items");
            const totalElement = document.getElementById("total");
            let total = 0;
            let cart = {}; 

            
            document.querySelectorAll(".add-to-cart").forEach(button => {
                button.addEventListener("click", function () {
                    const productName = this.getAttribute("data-name");
                    const productPrice = parseInt(this.getAttribute("data-price"));

                    
                    if (cart[productName]) {
                        if (cart[productName].quantity < 10) {  // Límite máximo de 10 unidades
                            cart[productName].quantity++;
                        }
                    } else {
                        cart[productName] = {
                            price: productPrice,
                            quantity: 1
                        };
                    }

                    updateCart();  
                });
            });

            
            document.getElementById("clear-cart").addEventListener("click", function () {
                cart = {}; 
                updateCart();
            });

           
            function incrementProduct(productName) {
                if (cart[productName].quantity < 10) {
                    cart[productName].quantity++;
                }
                updateCart();
            }

           
            function decrementProduct(productName) {
                if (cart[productName].quantity > 1) {
                    cart[productName].quantity--;
                } else {
                    delete cart[productName];  
                }
                updateCart();
            }

            
            function updateCart() {
                cartItems.innerHTML = "";  // Limpia la lista actual de items en el carrito
                total = 0;

                for (const [productName, productDetails] of Object.entries(cart)) {
                    const li = document.createElement("li");

                    li.innerHTML = `
                        ${productName} - ${productDetails.quantity} x $${productDetails.price} = $${productDetails.quantity * productDetails.price}
                        <button class="decrease-quantity">-</button>
                        <button class="increase-quantity">+</button>
                    `;

                    cartItems.appendChild(li);

                    
                    li.querySelector(".increase-quantity").addEventListener("click", function () {
                        incrementProduct(productName);
                    });

                    li.querySelector(".decrease-quantity").addEventListener("click", function () {
                        decrementProduct(productName);
                    });

                    
                    total += productDetails.quantity * productDetails.price;
                }

                totalElement.textContent = total;
            }
        });
    </script>
</body>
</html>
